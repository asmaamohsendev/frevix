generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                               String      @id @default(uuid())
  email                            String      @unique
  password                         String
  name                             String
  role                             Role
  isVerified                       Boolean
  createdAt                        DateTime    @default(now())
  updatedAt                        DateTime
  Client                           Client?
  Freelancer                       Freelancer?
  Message_Message_receiverIdToUser Message[]   @relation("Message_receiverIdToUser")
  Message_Message_senderIdToUser   Message[]   @relation("Message_senderIdToUser")
}

model Message {
  id                            String    @id @default(uuid())
  senderId                      String
  receiverId                    String
  content                       String
  timestamp                     DateTime  @default(now())
  readAt                        DateTime? // Read receipt timestamp
  User_Message_receiverIdToUser User      @relation("Message_receiverIdToUser", fields: [receiverId], references: [id])
  User_Message_senderIdToUser   User      @relation("Message_senderIdToUser", fields: [senderId], references: [id])

  // Index for efficient read receipt queries
  @@index([receiverId, readAt])
  @@index([senderId, timestamp])
}

model Client {
  id          String     @id
  userId      String     @unique
  fullName    String
  companyName String?
  bio         String?
  website     String?
  location    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  User        User       @relation(fields: [userId], references: [id])
  Contract    Contract[]
  Job         Job[]
}

model Contract {
  id           String         @id
  clientId     String
  freelancerId String
  jobId        String         @unique
  status       ContractStatus @default(PENDING)
  startDate    DateTime
  endDate      DateTime?
  Client       Client         @relation(fields: [clientId], references: [id])
  Freelancer   Freelancer     @relation(fields: [freelancerId], references: [id])
  Job          Job            @relation(fields: [jobId], references: [id])
  Review       Review?
}

model Freelancer {
  id              String          @id
  userId          String          @unique
  fullName        String
  hourlyRate      Float?
  experienceLevel ExperienceLevel
  bio             String?
  profilePicture  String?
  isAvailable     Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime
  Contract        Contract[]
  User            User            @relation(fields: [userId], references: [id])
  PortfolioLink   PortfolioLink[]
  Proposal        Proposal[]
  Review          Review[]
  Skill           Skill[]         @relation("FreelancerSkills")
}

model Job {
  id          String     @id
  clientId    String
  title       String
  description String
  budget      Float
  category    String
  status      JobStatus  @default(OPEN)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  Contract    Contract?
  Client      Client     @relation(fields: [clientId], references: [id])
  Proposal    Proposal[]

  @@index([budget, status])
  @@index([category, budget, status])
  @@index([category, status])
  @@index([status, budget, createdAt(sort: Desc)])
  @@index([status, createdAt(sort: Desc)])
}

model Otp {
  id          String    @id
  email       String
  otp         String
  type        OtpType
  status      OtpStatus @default(PENDING)
  userId      String?
  attempts    Int       @default(0)
  metadata    Json?
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  verifiedAt  DateTime?
  lastAttempt DateTime?

  @@index([email, type, status])
  @@index([expiresAt])
}

model PortfolioLink {
  id           String     @id
  title        String
  description  String?
  imageUrls    String[]
  githubUrl    String?
  liveUrl      String?
  freelancerId String
  Freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
}

model Proposal {
  id           String         @id
  freelancerId String
  jobId        String
  coverLetter  String
  proposedRate Float
  createdAt    DateTime       @default(now())
  status       ProposalStatus @default(PENDING)
  Freelancer   Freelancer     @relation(fields: [freelancerId], references: [id])
  Job          Job            @relation(fields: [jobId], references: [id])
}

model Review {
  id           String     @id
  contractId   String     @unique
  rating       Int
  feedback     String?
  createdAt    DateTime   @default(now())
  freelancerId String
  Contract     Contract   @relation(fields: [contractId], references: [id])
  Freelancer   Freelancer @relation(fields: [freelancerId], references: [id])
}

model Skill {
  id         String       @id
  name       String
  Freelancer Freelancer[] @relation("FreelancerSkills")
}

enum Role {
  CLIENT
  FREELANCER
  ADMIN
}

enum ContractStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELED
}

enum ExperienceLevel {
  JUNIOR
  MID
  SENIOR
}

enum JobStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  CANCELED
}

enum OtpStatus {
  PENDING
  VERIFIED
  EXPIRED
  USED
}

enum OtpType {
  PASSWORD_RESET
  EMAIL_VERIFICATION
  TWO_FACTOR_AUTH
  ACCOUNT_VERIFICATION
}

enum ProposalStatus {
  PENDING
  INTERVIEWING
  ACCEPTED
  DECLINED
}
